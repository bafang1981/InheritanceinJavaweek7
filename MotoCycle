	// base class here is MotorCycle
	class MotorCycle {
	    // here I can said that MotorCycle  class has two fields
	  public int color;
	    public int speed;
		public int gear;
	    
	    // the MotorCycle class has one constructor to initialize Color and speed
	    
	 
	    
	    public MotorCycle (int gear, int speed, int color)
	    {
	        this.gear = gear;
	        this.speed = speed;
	        this.color = color;  }
	    
	        
	        
	        
	        //the MotorCycle class has two methods
	        
	        public void applyBrake(int decrement) 
	        {
	        	speed -= decrement;
	        	
	        public void speedUp(int increment)
	        {
	            speed += increment; 
	            	
	            	
	            
	            
	            	        

